
    {{#partial "content"}}
        {{#if squads}}

    {{#each squads as |item index|}}

        <div class="col-md-4">
            <div class="card" style="width:280px;">
                <img src="/group2.jpg" alt="avatar group">
                <div class="card-body">
                    <strong class="d-inline-block mb-2 text-white">{{ name }}</strong>
                    <h5 class="card-title">{{ name }}</h5>
                    <p class="card-text">{{ cause }}Yes man</p>
                    <a href="/showheroes/{{index}}" style="margin-right: 50px">All Heroes</a>
                    <a class="" href="/theheroes/{{index}}" >Add Hero</a>
                </div>
            </div>
        </div>
    {{/each}}
        {{else}}
            <div class="col-md-6">

                <div class="card" style="width:280px;">
                    <img src="/serveimage.png" alt="avatar group">
                    <div class="card-body">
                        <h5 class="card-title">Squad Title</h5>
                        <p class="card-text">Lorem ipsum dolor sit amet,
                            hbdasdashdbashbsdhkascgyacbasdgycvasdgkycvsagconsectetur adipiscing elit. Praesent
                            ac rutrum purus</p>
                    </div>
                </div>
            </div>

        {{/if}}






















        </div>
