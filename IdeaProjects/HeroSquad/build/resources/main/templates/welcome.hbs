

{{#partial "content"}}

<div id="frm" class="theform">
    <form action="/newsquad" method="post">

        <h3 class="form-title">Create Squad</h3>
        <div class="form-group">
            <input id="name" class="form-input" placeholder="Name" name="name" type="text">
            <div class="controls">
            </div>
        </div>
        <div class="form-group">
            <input id="email" class="form-input" placeholder="Cause" name="cause" type="text">
        </div>
        <div class="form-group">
            <button type="submit" name="submit" id="submit"  class="btn btn-dark form-submit">Go!</button>
        </div>
        <div id="error_message" class="ajax_response" ></div>
        <div id="success_message" class="ajax_response"></div>
    </form>
    {{#if submitted}}
        {{#unless errors}}
            <div class="alert alert-success">
                Form successfully submitted!
            </div>
        {{/unless}}
    {{/if}}
</div>

{{/partial}}
